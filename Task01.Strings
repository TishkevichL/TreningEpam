//	Дан массив названий переменных в camelCase. 
//	Преобразовать названия в snake_case. 

public class SnakeCase {
	
	public static void main(String[] args) {

		String [] camelCase = {"indexOf", "getChar", "charAt", "toCharArray", "toLowerCase"};
		String [] snakeCase = toSnakeCase(camelCase);

		System.out.println(String.join(", ", camelCase));
		System.out.println(String.join(", ", snakeCase));

	}
	
	static String[] toSnakeCase(String[] camelCase) {
		
		String[] snakeCase = new String[camelCase.length];
		
		for(int i = 0; i<snakeCase.length; i++) {
			
			StringBuffer strBuff = new StringBuffer();
			
			for(int k = 0; k<camelCase[i].length(); k++) {
				
				char nextSymb = camelCase[i].toCharArray()[k];
				
				if(Character.isLowerCase(nextSymb)) {
					
					strBuff.append(nextSymb);
					
				}else {
					
					strBuff.append("_");
					nextSymb = Character.toLowerCase(nextSymb);
					strBuff.append(nextSymb);
				}
			}
			snakeCase[i] = strBuff.toString();
		}
		return snakeCase;
	}
}
