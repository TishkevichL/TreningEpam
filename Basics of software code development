	static void thirdFormula() {
		
    // Ð³Ñ€Ð°Ð´ÑƒÑÑ‹ 
		double x, y;
		
		Scanner scanThird = new Scanner(System.in);
		
		System.out.println("Ð’Ð²ÐµÐ´Ð¸Ñ‚Ðµ x: ");
		x = scanThird.nextDouble();
		
		System.out.println("Ð’Ð²ÐµÐ´Ð¸Ñ‚Ðµ y: ");
		y = scanThird.nextDouble();
		
		double result = ((sin(x) + cos(y)) / (cos(x) - sin(y))) * tan(x * y);
		
		if(cos(x) - sin(y)==0) {
			System.out.println("Ð ÐµÑˆÐµÐ½Ð¸Ðµ Ð½ÐµÐ²Ð¾Ð·Ð¼Ð¾Ð¶Ð½Ð¾!");
		}else {
			System.out.println(result);
		}
	}
	
